<div class="container">
  <h1 class="row justify-content-center">Categories</h1>

  <% @categories.each do |category| %>
    <div class="row text-center shadowp mt-3 row justify-content-center">
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title"><%= category.name %></h4>
            <h6 class="category-count">Numebr of posts: <%= category.posts.size %></h6>
            <%= link_to 'Go to category', category_path(category) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>