<% if notice %>
  <div class="alert alert-primary alert-dismissible fade show d-flex justify-content-between-items-start mt-2" role="notice">
      <button type="button" class="btn-close pl-3", data-bs-dismiss="alert" aria-label="Close"></button>
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show d-flex justify-content-between-items-start mt-2" role="alert">
  <button type="button" class="btn-close", data-bs-dismiss="alert" aria-label="Close"></button>
    <%= alert %>
  </div>
<% end %>