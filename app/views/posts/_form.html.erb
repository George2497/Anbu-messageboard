<div class="container">
  <div class="card" style="background-color: #ededed" >
    <div class="card-body">
      <%= form_with(model: @post, class: "shadow p-3", local: true) do |form| %>

        <div class="form-group">
          <%= form.label :title, class:"fw-bold" %>
          <%= form.text_field :title, class:"form-control", placeholder:"Enter a title..." %>
        </div>

        <div class="form-group mt-2">
          <%= form.label :description, class:"fw-bold" %>
          <%= form.text_area :description, class:"form-control", placeholder:"Enter a description..." %>
        </div>

        <div class="form-group">
          <%= form.label :categories %><br>
          <%= form.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
          <div class="category-checkbox">
          <%= b.check_box %>
          <%= b.label %>
          </div>
          <% end %>
        </div>

        <%= form.submit class: "btn btn-primary mt-2" %><br>
        <%= link_to '[Back to listings page]', home_path %>
      <% end %>
    </div>
  </div>
</div>
