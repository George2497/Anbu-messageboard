<h1 class="row justify-content-center">Sign up today</h1>
<div class="container">
  <div class="card mt-3 w-100" id="logincard" style="background-color: #ededed;">
    <div class="card-body shadow p-3">
      <%= form_with(model: @user, class: " offset-lg-5 mt-2", local:true) do |form| %>
        <div class="form-group col-5">
          <%= form.label :email, class:"fw-bold" %>
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter email" %>
        </div>
        <div class="form-group col-5 mt-2">
          <%= form.label :username, class: "fw-bold mt-2" %>
          <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter username"%>
        </div>
        <div class="form-group col-5 mt-2">
          <%= form.label :password, class: "fw-bold" %>
          <%= form.password_field :password, class:"form-control shadow rounded", placeholder: "Enter password"%>
        </div>
        <%= form.submit 'Sign up', class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>